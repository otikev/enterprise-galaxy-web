  <!-- Content area -->
  <div class="content d-flex justify-content-center align-items-center">
    <%= form_for @user,:html => {:class => 'signup-form'}, :url => url_for(:controller => 'auth', :action => 'enterprise', ) do |form| %>
      <div class="card mb-0">
        <div class="card-body">
          <div class="text-center mb-3">
            <%= image_tag('logo_transparent.png', width: "100", alt: "Enterprise Galaxy") %>
            <h5 class="mb-0">Create Enterprise Account</h5>
            <span class="d-block text-muted">All fields are required</span>
          </div>

          <%= render 'general/error_messages', object: form.object %>

          <div class="form-group text-center text-muted content-divider">
            <span class="px-2">Your credentials</span>
          </div>
          <div class="form-group row">
            <label class="col-lg-5 col-form-label text-right"><i class="icon-mention text-muted"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Contact Email:</label>
            <div class="col-lg-7">
              <%= form.text_field :email,placeholder: "Contact Email",class: "form-control", :required=>true %>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-lg-5 col-form-label text-right"><i class="icon-user-lock text-muted"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Contact Password:</label>
            <div class="col-lg-7">
              <%= form.password_field :password ,placeholder: "Contact Password", class: "form-control" , :required=>true%>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-lg-5 col-form-label text-right"><i class="icon-user-lock text-muted"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Password Confirmation:</label>
            <div class="col-lg-7">
              <%= form.password_field :password_confirmation ,placeholder: "Confirm Password", class: "form-control" , :required=>true%>
            </div>
          </div>
          <div class="form-group text-center text-muted content-divider">
            <span class="px-2">Business Details</span>
          </div>

          <%= form.fields_for :enterprise, @enterprise do |enterprise_form| %>
            <div class="form-group row">
              <label class="col-lg-5 col-form-label text-right"><i class="icon-phone text-muted"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Phone Number:</label>
              <div class="col-lg-7">
                <%= enterprise_form.text_field :phone, placeholder: "Phone Number", class: "form-control"  , :required=>true%>
              </div>
            </div>
            <div class="form-group row">
              <label class="col-lg-5 col-form-label text-right"><i class="icon-office text-muted"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Business Name:</label>
              <div class="col-lg-7">
                <%= enterprise_form.text_field :business_name, placeholder: "Business Name", class: "form-control"  , :required=>true%>
              </div>
            </div>
            <div class="form-group row">
              <label class="col-lg-5 col-form-label text-right"><i class="icon-list text-muted"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Business Form:</label>
              <div class="col-lg-7">
                <%= enterprise_form.collection_select :business_form_id, BusinessForm.all, :id, :name,{prompt: "Select Business" }, {class: "form-control"} %>
              </div>
            </div>
            <div class="form-group row">
              <label class="col-lg-5 col-form-label text-right"><i class="icon-list text-muted"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Broad Sector:</label>
              <div class="col-lg-7">
                <%= enterprise_form.collection_select :broad_sector_name_id, BroadSectorName.all, :id, :name, {prompt: "Select Broad Sector" }, {class: "form-control"} %>
              </div>
            </div>
            <div class="form-group row">
              <label class="col-lg-5 col-form-label text-right"><i class="icon-calendar text-muted"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Date of Registration:</label>
              <div class="col-lg-7">
                <%= enterprise_form.date_field :registration_date, class: "form-control",placeholder: "Date of Registration", :required=>true %>
              </div>
            </div>
            <div class="form-group row">
              <label class="col-lg-5 col-form-label text-right"><i class="icon-calendar text-muted"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Start of Business Operations:</label>
              <div class="col-lg-7">
                <%= enterprise_form.date_field :start_of_operations_date, class: "form-control",placeholder: "Date of Registration", :required=>true %>
              </div>
            </div>
            <div class="form-group row">
              <label class="col-lg-5 col-form-label text-right"><i class="icon-list text-muted"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Country:</label>
              <div class="col-lg-7">
                <%= enterprise_form.country_select :country, ["Kenya"], {prompt: "Select Country" }, {class: "form-control"} %>
              </div>
            </div>
            <div class="form-group row">
              <label class="col-lg-5 col-form-label text-right"><i class="icon-speakers text-muted"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;How did you find us?:</label>
              <div class="col-lg-7">
                <%= enterprise_form.select :referral,[['Facebook',1],['LinkedIn',2],['Word of mouth',3],['TV',4]], {prompt: "Select Source" }, {class: "form-control"} %>
              </div>
            </div>
            <div class="form-group row">
              <label class="col-lg-5 col-form-label text-right"><i class="icon-user-check text-muted"></i>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Are you human?:</label>
              <div class="col-lg-7">
                <%= recaptcha_tags %>
              </div>
            </div>
          <% end %>
          <%= button_tag(:class => "btn bg-teal-400 btn-block") do %>
            Join <i class="icon-circle-right2 ml-2"></i>
          <% end %>
          <br/>
          <div class="form-group text-center text-muted content-divider">
            <span class="px-2">Already have an account?</span>
          </div>
          <div class="form-group d-flex align-items-center">
            <%= link_to "Sign In", signin_path, class: "btn btn-transparent border-success text-success btn-block col-12" %>
          </div>
        </div>
        </div>
      </div>
    <% end %>

  </div>
  <!-- /content area -->
