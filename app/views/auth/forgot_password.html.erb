<div class="content d-flex justify-content-center align-items-center">

  <%= form_tag(forgot_password_path, html: {class: "login-form"}) do %>
    <div class="card mb-0">
      <div class="card-body">
        <div class="text-center mb-3">
          <%= image_tag('logo_transparent.png', width: "100", alt: "Enterprise Galaxy") %>
          <h5 class="mb-0">Password recovery</h5>
          <span class="d-block text-muted">We'll send you instructions in email</span>
        </div>

        <div class="form-group form-group-feedback form-group-feedback-left">
          <%= text_field_tag(:email,'',class: 'form-control col-sm-12', :required=>true, :placeholder=>'Your email' ) %>
          <div class="form-control-feedback">
            <i class="icon-mail5 text-muted"></i>
          </div>
        </div>

        <div class="form-group">
          <%= button_tag(type: "submit", class: "btn bg-blue btn-block") do %>
            <i class="icon-spinner11 mr-2"></i> Recover My Password
          <% end %>
        </div>

        <div class="form-group d-flex align-items-center">
          <%= link_to "Sign In?", signin_path, class: "ml-auto" %>
        </div>
      </div>
    </div>
  <% end %>>

</div>
<!-- /content area -->