<!-- Navbar on small screens -->
<div id="navDemo" class="w3-bar-block w3-theme-d2 w3-hide w3-hide-large w3-hide-medium w3-large">
  <a href="#" class="w3-bar-item w3-button w3-padding-large">Link 1</a>
  <a href="#" class="w3-bar-item w3-button w3-padding-large">Link 2</a>
  <a href="#" class="w3-bar-item w3-button w3-padding-large">Link 3</a>
  <a href="#" class="w3-bar-item w3-button w3-padding-large">My Profile</a>
</div>

<!-- Page Container -->
<div class="w3-container w3-content" style="max-width:1400px;margin-top:80px">
  <!-- The Grid -->
  <div class="w3-row">
    <!-- Left Column -->
    <div class="w3-col m3">
      <!-- Profile -->
      <div class="w3-card w3-round w3-white">
        <div class="w3-container">
          <h4 class="w3-center">Enterprise Registration</h4>
          <p class="w3-center"><%= image_tag('logo_transparent.png', size: "300x300", alt: "Enterprise Galaxy") %></p>
        </div>
      </div>
      <br>

      <!-- Accordion -->
      <div class="w3-card w3-round">
        <div class="w3-white">
          <button onclick="myFunction('Demo3')" class="w3-button w3-block w3-theme-l1 w3-left-align"><i class="fa fa-users fa-fw w3-margin-right"></i>Advisor Registration</button>
        </div>
      </div>
      <!-- End Left Column -->
    </div>

    <!-- Middle Column -->
    <div class="w3-col m7">
      <div class="w3-row-padding">
        <div class="w3-col m12">
          <div class="w3-card w3-round w3-white">
            <div class="w3-container w3-padding">
              <h6 class="w3-opacity">Please enter the enterprise details</h6>

              <%= form_with scope: :enterprise, url: enterprises_path, local: true do |form| %>
                <p>
                  <%= form.label "Business Name" %><br>
                  <%= form.text_field :business_name %>
                </p>
                <p>
                  <%= form.label "Country" %><br>
                  <%= form.text_field :country %>
                </p>
                <p>
                  <%= form.label "City" %><br>
                  <%= form.text_field :city %>
                </p>
                <p>
                  <%= form.label "Postal Address" %><br>
                  <%= form.text_field :postal_address %>
                </p>
                <p>
                  <%= form.label "Postal Code" %><br>
                  <%= form.text_field :postal_code %>
                </p>
                <p>
                  <%= form.label "Office Number" %><br>
                  <%= form.text_field :office_number %>
                </p>
                <hr/>
                <p>
                  <%= form.label "Contact Email" %><br>
                  <%= form.text_field :contact_email %>
                </p>
                <p>
                  <%= form.label "Office Phone" %><br>
                  <%= form.text_field :office_phone %>
                </p>
                <p>
                  <%= form.submit %>
                </p>
              <% end %>
            </div>
          </div>
        </div>
      </div><br/>

      <!-- End Middle Column -->
    </div>

    <!-- End Grid -->
  </div>

  <!-- End Page Container -->
</div>
<br>