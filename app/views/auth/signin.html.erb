  <!-- Content area -->
  <div class="content d-flex justify-content-center align-items-center">

    <!-- Login card -->
    <%= form_for @user, url: signin_path, html: {class: "login-form"} do |f| %>
      <div class="card mb-0">
        <div class="card-body">
          <div class="text-center mb-3">
            <%= image_tag('logo_transparent.png', width: "100", alt: "Enterprise Galaxy") %>
            <h5 class="mb-0">Login to your account</h5>
            <span class="d-block text-muted">Your credentials</span>
          </div>

          <%= render 'general/error_messages', object: f.object %>

          <div class="form-group form-group-feedback form-group-feedback-left">
            <%= f.text_field :email, class:"form-control", placeholder:"Email", :required=>true %>
            <div class="form-control-feedback">
              <i class="icon-user text-muted"></i>
            </div>
          </div>

          <div class="form-group form-group-feedback form-group-feedback-left">
            <%= f.password_field :password, class:"form-control", placeholder:"Password", :required=>true %>
            <div class="form-control-feedback">
              <i class="icon-lock2 text-muted"></i>
            </div>
          </div>

          <div class="form-group form-group-feedback form-group-feedback-left">
            <%= recaptcha_tags %>
          </div>

          <div class="form-group d-flex align-items-center">
            <%= link_to "Forgot password?", forgot_password_path, class: "ml-auto" %>
          </div>

          <div class="form-group">
            <%= button_to("Sign In",{controller:'auth', action:'signin'}, class: "btn btn-primary btn-block", :method => :post) %>
          </div>

          <div class="form-group text-center text-muted content-divider">
            <span class="px-2">Don't have an account?</span>
          </div>

          <div class="form-group">
            <%= link_to "Sign up", signup_path, class: "btn btn-success btn-block" %>
          </div>

          <span class="form-text text-center text-muted">By continuing, you're confirming that you've read our <a href="#">Terms &amp; Conditions</a> and <a href="#">Cookie Policy</a></span>
        </div>
      </div>
    <% end %>

  </div>
  <!-- /content area -->