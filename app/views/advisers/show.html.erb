<div class="content">
  <!-- Application status -->
  <div class="card">
    <div class="card-header header-elements-inline">
      <h5 class="card-title">Profile Completion Status</h5>
    </div>

    <div class="card-body">
      <ul class="list-unstyled mb-0">
        <li class="mb-3">
          <div class="d-flex align-items-center mb-1"><%= @adviser.profile_completion_status %>%</div>
          <div class="progress" style="height: 0.375rem;">
            <div class="progress-bar bg-success" style="width: <%= @adviser.profile_completion_status %>%">
            </div>
          </div>
        </li>
      </ul>
      <div class="text-right col-12">
        By completing your profile, you will get access to all Enterprise Galaxy features.
      </div>
    </div>
  </div>
  <!-- /application status -->
  <div class="row-tile text-right"><h2>My Profile</h2></div>
  <div class="row">
    <div class="col-4">
      <!-- User details (with sample pattern) -->
      <div class="card">
        <div class="card-body border-top-0">
          <div class="d-sm-flex flex-sm-wrap mb-3">
            <div class="mr-3" style="margin-right: 10px;">
              <div class="btn bg-transparent text-success rounded-round border-2 btn-icon">
                <i class="icon-user-tie"></i>
              </div>
            </div>
            <div class="d-flex align-items-center">
              <div class="font-weight-semibold">Title:&nbsp;&nbsp;&nbsp;</div>
              <div class="ml-sm-auto mt-2 mt-sm-0"><%= @adviser.get_title %></div>
            </div>
          </div>

          <div class="d-sm-flex flex-sm-wrap mb-3">
            <div class="mr-3" style="margin-right: 10px;">
              <div class="btn bg-transparent text-success rounded-round border-2 btn-icon">
                <i class="icon-profile"></i>
              </div>
            </div>
            <div class="d-flex align-items-center">
              <div class="font-weight-semibold">First Name:&nbsp;&nbsp;&nbsp;</div>
              <div class="ml-sm-auto mt-2 mt-sm-0"><%= @adviser.first_name %></div>
            </div>
          </div>

          <div class="d-sm-flex flex-sm-wrap mb-3">
            <div class="mr-3" style="margin-right: 10px;">
              <div class="btn bg-transparent text-success rounded-round border-2 btn-icon">
                <i class="icon-profile"></i>
              </div>
            </div>
            <div class="d-flex align-items-center">
              <div class="font-weight-semibold">Other Names:&nbsp;&nbsp;&nbsp;</div>
              <div class="ml-sm-auto mt-2 mt-sm-0"><%= @adviser.other_names %></div>
            </div>
          </div>

          <div class="d-sm-flex flex-sm-wrap mb-3">
            <div class="mr-3" style="margin-right: 10px;">
              <div class="btn bg-transparent text-success rounded-round border-2 btn-icon">
                <i class="icon-calendar"></i>
              </div>
            </div>
            <div class="d-flex align-items-center">
              <div class="font-weight-semibold">Date of Birth:&nbsp;&nbsp;&nbsp;</div>
              <div class="ml-sm-auto mt-2 mt-sm-0"><%= @adviser.date_of_birth %></div>
            </div>
          </div>

          <div class="d-sm-flex flex-sm-wrap mb-3">
            <div class="mr-3" style="margin-right: 10px;">
              <div class="btn bg-transparent text-success rounded-round border-2 btn-icon">
                <i class="icon-person"></i>
              </div>
            </div>
            <div class="d-flex align-items-center">
              <div class="font-weight-semibold">Gender:&nbsp;&nbsp;&nbsp;</div>
              <% if @adviser.nationality %>
                <div class="ml-sm-auto mt-2 mt-sm-0"><%= @adviser.gender %></div>
              <% else %>
                <div class="ml-sm-auto mt-2 mt-sm-0">Not Set</div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <!-- /user details (with sample pattern) -->
    </div>
    <div class="col-4">
      <div class="card">
        <div class="card-body border-top-0">

          <div class="d-sm-flex flex-sm-wrap mb-3">
            <div class="mr-3" style="margin-right: 10px;">
              <div class="btn bg-transparent text-success rounded-round border-2 btn-icon">
                <i class="icon-phone2"></i>
              </div>
            </div>
            <div class="d-flex align-items-center">
              <div class="font-weight-semibold">Phone Number:&nbsp;&nbsp;&nbsp;</div>
              <div class="ml-sm-auto mt-2 mt-sm-0"><%= @adviser.cell_phone %></div>
            </div>
          </div>

          <div class="d-sm-flex flex-sm-wrap mb-3">
            <div class="mr-3" style="margin-right: 10px;">
              <div class="btn bg-transparent text-success rounded-round border-2 btn-icon">
                <i class="icon-location3"></i>
              </div>
            </div>
            <div class="d-flex align-items-center">
              <div class="font-weight-semibold">Country Of Residence:&nbsp;&nbsp;&nbsp;</div>
              <div class="ml-sm-auto mt-2 mt-sm-0"><%= @adviser.country_of_residence %></div>
            </div>
          </div>

          <div class="d-sm-flex flex-sm-wrap mb-3">
            <div class="mr-3" style="margin-right: 10px;">
              <div class="btn bg-transparent text-success rounded-round border-2 btn-icon">
                <i class="icon-address-book2"></i>
              </div>
            </div>
            <div class="d-flex align-items-center">
              <div class="font-weight-semibold">Nationality:&nbsp;&nbsp;&nbsp;</div>
              <% if @adviser.nationality %>
                <div class="ml-sm-auto mt-2 mt-sm-0"><%= @adviser.nationality %></div>
              <% else %>
                <div class="ml-sm-auto mt-2 mt-sm-0">Not Set</div>
              <% end %>
            </div>
          </div>

          <div class="d-sm-flex flex-sm-wrap mb-3">
            <div class="mr-3" style="margin-right: 10px;">
              <div class="btn bg-transparent text-success rounded-round border-2 btn-icon">
                <i class="icon-mailbox"></i>
              </div>
            </div>
            <div class="d-flex align-items-center">
              <div class="font-weight-semibold">P.O. Box:&nbsp;&nbsp;&nbsp;</div>
              <% if @adviser.po_box %>
                <div class="ml-sm-auto mt-2 mt-sm-0"><%= @adviser.po_box %></div>
              <% else %>
                <div class="ml-sm-auto mt-2 mt-sm-0">Not Set</div>
              <% end %>
            </div>
          </div>

          <div class="d-sm-flex flex-sm-wrap mb-3">
            <div class="mr-3" style="margin-right: 10px;">
              <div class="btn bg-transparent text-success rounded-round border-2 btn-icon">
                <i class="icon-city"></i>
              </div>
            </div>
            <div class="d-flex align-items-center">
              <div class="font-weight-semibold">City:&nbsp;&nbsp;&nbsp;</div>
              <% if @adviser.city %>
                <div class="ml-sm-auto mt-2 mt-sm-0"><%= @adviser.city %></div>
              <% else %>
                <div class="ml-sm-auto mt-2 mt-sm-0">Not Set</div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-4">
      <div class="card">
        <div class="card-body border-top-0">

          <div class="d-sm-flex flex-sm-wrap mb-3">
            <div class="mr-3" style="margin-right: 10px;">
              <div class="btn bg-transparent text-success rounded-round border-2 btn-icon">
                <i class="icon-mail5"></i>
              </div>
            </div>
            <div class="d-flex align-items-center">
              <div class="font-weight-semibold">Personal Email:&nbsp;&nbsp;&nbsp;</div>
              <% if @adviser.personal_email %>
                <div class="ml-sm-auto mt-2 mt-sm-0"><%= @adviser.personal_email %></div>
              <% else %>
                <div class="ml-sm-auto mt-2 mt-sm-0">Not Set</div>
              <% end %>
            </div>
          </div>

          <div class="d-sm-flex flex-sm-wrap mb-3">
            <div class="mr-3" style="margin-right: 10px;">
              <div class="btn bg-transparent text-success rounded-round border-2 btn-icon">
                <i class="icon-mail-read"></i>
              </div>
            </div>
            <div class="d-flex align-items-center">
              <div class="font-weight-semibold">Work Email:&nbsp;&nbsp;&nbsp;</div>
              <% if @adviser.work_email %>
                <div class="ml-sm-auto mt-2 mt-sm-0"><%= @adviser.work_email %></div>
              <% else %>
                <div class="ml-sm-auto mt-2 mt-sm-0">Not Set</div>
              <% end %>
            </div>
          </div>

          <div class="d-sm-flex flex-sm-wrap mb-3">
            <div class="mr-3" style="margin-right: 10px;">
              <div class="btn bg-transparent text-success rounded-round border-2 btn-icon">
                <i class="icon-comments"></i>
              </div>
            </div>
            <div class="d-flex align-items-center">
              <div class="font-weight-semibold">Preferred Mode Of Communication:&nbsp;&nbsp;&nbsp;</div>
              <% if @adviser.preferred_mode_of_comms %>
                <div class="ml-sm-auto mt-2 mt-sm-0"><%= @adviser.preferred_mode_of_comms %></div>
              <% else %>
                <div class="ml-sm-auto mt-2 mt-sm-0">Not Set</div>
              <% end %>
            </div>
          </div>

          <div class="d-sm-flex flex-sm-wrap mb-3">
            <div class="mr-3" style="margin-right: 10px;">
              <div class="btn bg-transparent text-success rounded-round border-2 btn-icon">
                <i class="icon-briefcase3"></i>
              </div>
            </div>
            <div class="d-flex align-items-center">
              <div class="font-weight-semibold">Employment Status:&nbsp;&nbsp;&nbsp;</div>
              <% if @adviser.employment_status %>
                <div class="ml-sm-auto mt-2 mt-sm-0"><%= @adviser.employment_status %></div>
              <% else %>
                <div class="ml-sm-auto mt-2 mt-sm-0">Not Set</div>
              <% end %>
            </div>
          </div>

          <div class="d-sm-flex flex-sm-wrap mb-3">
            <div class="mr-3" style="margin-right: 10px;">
              <div class="btn bg-transparent text-success rounded-round border-2 btn-icon">
                <i class="icon-briefcase"></i>
              </div>
            </div>
            <div class="d-flex align-items-center">
              <div class="font-weight-semibold">Current Employer:&nbsp;&nbsp;&nbsp;</div>
              <% if @adviser.current_employer %>
                <div class="ml-sm-auto mt-2 mt-sm-0"><%= @adviser.current_employer %></div>
              <% else %>
                <div class="ml-sm-auto mt-2 mt-sm-0">Not Set</div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row" style="margin-bottom: 10px;">
    <div class="text-left col-12">
      <%= link_to "Edit Profile", adviser_edit_profile_path, class: "btn btn-success btn-block col-1" %>
    </div>
  </div>
</div>
